#!/bin/sh

alias +x='chmod +x'
alias .....='cd ../../../..'
alias ....='cd ../../..'
alias ...='cd ../..'
alias ..='cd ..'
alias ag='ag --pager $PAGER'
alias beep='tput bel'
alias bell='tput bel'
alias cm='chmod'
alias cp='cp -iv'
alias dir='dir --color=auto'
alias egrep='grep -E --color=auto'
alias feedgnuplot='feedgnuplot --terminal "dumb $COLUMNS $LINES"'
alias fgrep='grep -F --color=auto'
alias f='file -L'
alias fs='du -sbhL'
alias g='git'
alias gd='git diff --color=auto'
alias gg='git log --color=always --all --decorate --oneline --graph'
alias gs='git status'
alias grep='grep --color=auto'
alias grepi='grep -i'
alias igrep='grep -i'
alias ks='ls'
alias la='ls -A'
alias le='LESSOPEN= less'
alias lo='less'
alias ll='ls -lav --group-directories-first'
alias l='ls -CFv --group-directories-first -X'
alias ls='ls --color=auto'
alias mk='make'
alias mv='mv -iv'
alias nanos2='nano --tabstospaces --tabsize=2'
alias nanos4='nano --tabstospaces --tabsize=4'
alias n='nano'
alias relf='readelf'
alias sane='stty sane'
alias str='strings'
alias rm='rm -iv'
alias ta='tmux attach'
alias tl='tmux list-sessions'
alias tree='tree -v'
alias v='vim'
alias wh='which'
alias xco='xclip -o'
alias xc='xclip'

obc() {
	local tmp="$(mktemp /tmp/XXXXXX.asm)"
	objconv -fnasm "$@" "$tmp"
	if [ -t 1 ]; then
		less -p'^[a-z]+:' "$tmp"
	else
		cat "$tmp"
	fi
}

awksum() {
	local expr="${1:-\$1}"
	awk "{ s += $expr } END { print s }"
}

# backup a file
bak() {
	cp -rv "$1" "$1.bak"
}
# code-grep
cgrep() {
	grep --color=always -rIn "$1" "${2:-.}" | ifne less
}
sig() {
	([ -z "$1" ] || [ -z "$2" ]) && return 1;
	command kill -s "$1" $(pgrep "$2" || echo "$2");
}
xxd() {
	command xxd -c $[$COLUMNS / 4 - 2] "$@";
}
=() {
	echo $(("$@"));
}
settitle() {
	echo -ne "\033]0;$1\007";
}

serve() {
	darkhttpd . || php -S localhost:80
}

expid() {
	(pid="$BASHPID"; echo "Copied \"$pid\""; printf %d "$pid" | tmux loadb -; exec "$@")
}

chboth() {
	chown "$@"
	chgrp "$@"
}
